<% layout('./layout/boilerplate.ejs') %>
<style>
  .a {
    text-decoration: none;
    color: white;
  }
  .card {
    background-color: rgb(39, 37, 34);
  }
  .row {
    display: block;
    margin-left: 2px;
    margin-right: 2px;
  }
  .radiobtn {
    padding: 1%;
    margin-bottom: 1em;
  }
  img {
    width: 90%;
    height: 3em;
  }
  small {
    font-size: xx-small;
  }
  .skill {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    flex-wrap: wrap;
  }
</style>

<div class="row my-5 mx-2">
  <div class="col-md-6 offset-md-4 card my-3 px-5 py-3 text-white">
    <h2>
      <a href="/user/login" class="a">Login</a> |
      <a href="/user/register" class="a">Register</a>
    </h2>
    <form
      action="/user/register"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label for="username" class="form-label">User name</label>
        <input
          type="text"
          class="form-control bg-dark text-white"
          id="Email1"
          aria-describedby="usernamme"
          required
          name="username"
        />
      </div>
      <div class="mb-3">
        <label for="Email1" class="form-label">Email address</label>
        <input
          type="email"
          class="form-control bg-dark text-white"
          id="Email1"
          aria-describedby="email"
          name="email"
          required
        />
        <div id="email" class="form-text text-white">
          <small>We'll never share your email with anyone else.</small>
        </div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control bg-dark text-white"
          id="Password"
          name="password"
          required
        />
      </div>
      <div class="mb-3 d-flex skill">
        <input
          type="radio"
          class="btn-check"
          name="skill"
          id="option1"
          autocomplete="off"
          checked
          value="new to chess"
        />
        <label class="btn btn-secondary radiobtn px-md-2" for="option1">
          <img src="/utility/images/Wpawn.png" class="image-fluid" alt="" />
          <div><small>New to chess</small></div></label
        >

        <input
          type="radio"
          class="btn-check"
          name="skill"
          id="option2"
          autocomplete="off"
          value="beginner"
        />
        <label class="btn btn-secondary radiobtn px-md-2" for="option2">
          <img src="/utility/images/Wknight.png" alt="" />
          <div><small>Beginner</small></div></label
        >
        <input
          type="radio"
          class="btn-check"
          name="skill"
          id="option3"
          autocomplete="off"
          value="intermediate"
        />
        <label class="btn btn-secondary radiobtn px-md-2" for="option3">
          <img src="/utility/images/Wqueen.png" alt="" />
          <div><small>Intermediate</small></div></label
        >

        <input
          type="radio"
          class="btn-check"
          name="skill"
          id="option4"
          autocomplete="off"
          value="advanced"
        />
        <label class="btn btn-secondary radiobtn px-md-2" for="option4">
          <img src="/utility/images/Wking.png" alt="" />
          <div><small>Advanced</small></div></label
        >
      </div>

      <div class="my-3">
        <button type="submit" class="btn btn-secondary">Sign up</button>
      </div>
    </form>
  </div>
</div>
